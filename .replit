modules = ["ruby-3.2", "web", "nodejs-23"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["postgresql", "postgresql_16", "openssl", "pkg-config", "gcc", "gnumake", "autoconf", "automake", "libtool", "redis"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Chatwoot"

[[workflows.workflow]]
name = "Chatwoot"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start_app.sh"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6379
externalPort = 3000

[[ports]]
localPort = 7433
externalPort = 3002

[[ports]]
localPort = 45017
externalPort = 3001

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "bundle exec puma -C config/puma.rb -p 5000 & bundle exec sidekiq -C config/sidekiq.yml"]
build = ["bash", "-c", "bundle install && pnpm install && BUILD_MODE=library bin/vite build && bin/vite build"]
