modules = ["ruby-3.2", "web", "nodejs-23", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["postgresql", "postgresql_16", "openssl", "pkg-config", "gcc", "gnumake", "autoconf", "automake", "libtool", "redis"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Chatwoot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WhatsApp Web Service"

[[workflows.workflow]]
name = "Chatwoot"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start_app.sh"
waitForPort = 5000

[[workflows.workflow]]
name = "WhatsApp Web Service"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd lib/whatsapp_web && WHATSAPP_WEB_PORT=3001 RAILS_BASE_URL=https://$REPL_SLUG.$REPL_OWNER.repl.co npm start"
waitForPort = 3001

